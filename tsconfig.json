{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,

    /* Paths */
    "baseUrl": ".",
    "paths": {
      "~*": ["src/*"],
      "~apis/*": ["src/apis/*"],
      "~assets/*": ["src/assets/*"],
      "~components/*": ["src/components/*"],
      "~configs/*": ["src/configs/*"],
      "~constants/*": ["src/constants/*"],
      "~graphql/*": ["src/graphql/*"],
      "~hooks/*": ["src/hooks/*"],
      "~lib/*": ["src/lib/*"],
      "~navigation/*": ["src/navigation/*"],
      "~screens/*": ["src/screens/*"],
      "~store/*": ["src/store/*"],
      "~types/*": ["src/types/*"],
      "~utils/*": ["src/utils/*"]
    },

    /* Config GraphQL Codegen */
    "plugins": [
      {
        "name": "@0no-co/graphqlsp",
        "schema": "./schema.graphql"
      }
    ]
  }
}
